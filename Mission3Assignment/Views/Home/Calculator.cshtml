@{
    ViewData["Title"] = "Calculator";
}

@model CalculatorModel;

<h1>Grade Calculator</h1>
<p>Put in each grade value between 0 and 100.</p>
<form method="post">
    <label for="assignment">Assignments (55 of grade%):</label>
    <input id="assignment" asp-for="Assignment" type="number" width="100" min="0" placeholder="Put your grade here" required /><br />

    <label for="group">Group Project (5 of grade%):</label>
    <input id="group" asp-for="Group" type="number" width="100" min="0" placeholder="Put your grade here" required /><br />

    <label for="quiz">Quizzes (10 of grade%):</label>
    <input id="quiz" asp-for="Quiz" type="number" width="100" min="0" placeholder="Put your grade here" required /><br />

    <label for="exam">Exams  (20 of grade%):</label>
    <input id="exam" asp-for="Exam" type="number" width="100" min="0" placeholder="Put your grade here" required /><br />

    <label for="intex">INTEX (10 of grade%):</label>
    <input id="intex" asp-for="Intex" type="number" width="100" min="0" placeholder="Put your grade here" required /><br />
    <br />        <br />

    <input class="btn" id="add" type="submit" value="Calculate Now" /> <!--id='btnSend'-->
    @*not exactly sure what this is for*@
    <div asp-validation-summary="All"></div>

    <br />        <br />

    <p id="output"></p>

</form>


